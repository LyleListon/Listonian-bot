{
    "name": "Arbitrage Bot",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "forwardPorts": [5000, 8771],
    "portsAttributes": {
        "5000": {
            "label": "Dashboard",
            "onAutoForward": "notify"
        },
        "8771": {
            "label": "WebSocket",
            "onAutoForward": "notify"
        }
    },
    "postCreateCommand": "pip install -r requirements.txt",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
            ]
        }
    }
}